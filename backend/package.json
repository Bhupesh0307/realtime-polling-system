{
  "name": "realtime-polling-backend",
  "version": "1.0.0",
  "description": "Minimal Node.js + TypeScript backend for a real-time polling system using Express, Socket.io, and MongoDB (Mongoose).",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "socket.io",
    "mongoose",
    "realtime",
    "polling"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "mongoose": "^8.23.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
